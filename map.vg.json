{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "width": 600,
  "height": 300,
  "padding": {"top": -250, "left": 0, "right": 10, "bottom": 0},
  "signals": [
    {
      "name": "hover",
      "value": null,
      "on": [
        {"events": "symbol:mouseover", "update": "datum"},
        {"events": "symbol:mouseout", "update": "null"}
      ]
    },
    {
      "name": "title",
      "value": "Australia Domestic Flights (June 2019)",
      "update": "hover ? hover.Departure : 'Australia Domestic Flights (June 2019)'"
    },
    {
      "name": "subtitle",
      "value": "based on the number of passengers",
      "update": "hover ? null : 'based on the number of passengers'"
    }
  ],
  "data": [
    {
      "name": "custom.geo (3)",
      "url": "https://raw.githubusercontent.com/Amelia-Wu/data-viz-2/data/custom.geo%20(3).json",
      "format": {"type": "topojson", "feature": "STE_2016_AUST"},
      "transform": [
        {
          "type": "geopath",
          "projection": "projection"
        }
      ]
    },
    {
      "name": "traffic",
      "url": "https://raw.githubusercontent.com/Amelia-Wu/data-viz-2/data/2019%20passenger.csv",
      "format": {"type": "csv", "parse": "auto"},
      "transform": [
        {
          "type": "aggregate",
          "groupby": ["Origin"],
          "fields": ["Passengers"], "ops": ["sum"], "as": ["passenger"]
        }
      ]
    },
    {
      "name": "airports",
      "url": "https://raw.githubusercontent.com/Amelia-Wu/data-viz-2/data/2019%20location.csv",
      "format": {"type": "csv", "parse": "auto"},
      "transform": [
        {
          "type": "lookup",
          "from": "traffic", "key": "Origin",
          "fields": ["Departure"], "as": ["traffic"]
        },
        {
          "type": "filter",
          "expr": "datum.traffic != null"
        },
        {
          "type": "geopoint",
          "projection": "projection",
          "fields": ["longitude", "latitude"]
        },
        {
          "type": "filter",
          "expr": "datum.x != null && datum.y != null"
        }
      ]
    },
    {
      "name": "routes",
      "url": "https://raw.githubusercontent.com/Amelia-Wu/data-viz-2/data/2019%20passenger.csv",
      "format": {"type": "csv", "parse": "auto"},
      "transform": [
        {
          "type": "filter",
          "expr": "hover && hover.Departure == datum.Origin"
        },
        {
          "type": "lookup",
          "from": "airports", "key": "Departure",
          "fields": ["Origin", "Destination"], "as": ["source", "target"]
        },
        {
          "type": "filter",
          "expr": "datum.source && datum.target"
        },
        {
          "type": "linkpath",
          "shape": "line"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "size",
      "type": "linear",
      "domain": {"data": "traffic", "field": "passenger"},
      "range": [100, 1200]
    }
  ],
  "projections": [
    {
      "name": "projection",
      "type": "albers",
      "rotate": [225,45,0]}
  ],
  "marks": [
    {
      "type": "path",
      "from": {"data": "custom.geo (3)"},
      "encode": {
        "enter": {
          "fill": {"value": "steelblue"},
          "fillOpacity": {"value": 0.8},
          "stroke": {"value": "white"}
        },
        "update": {
          "path": {"field": "path"}
        }
      }
    },
    {
      "type": "symbol",
      "from": {"data": "airports"},
      "encode": {
        "enter": {
          "size": {"scale": "size", "field": "traffic.passenger"},
          "fill": {"value": "grey"},
          "fillOpacity": {"value": 0.8},
          "stroke": {"value": "white"},
          "strokeWidth": {"value": 1.5}
        },
        "update": {
          "x": {"field": "x"},
          "y": {"field": "y"}
        }
      }
    },
    {
      "type": "text",
      "interactive": false,
      "encode": {
        "enter": {
          "x": {"signal": "width", "offset": -500},
          "y": {"value": 300},
          "fill": {"value": "black"},
          "fontSize": {"value": 17},
          "fontStyle": {"value": "bold"},
          "align": {"value": "left"}
        },
        "update": {
          "text": {"signal": "title"}
        }
      }
    },
    {
      "type": "text",
      "interactive": false,
      "encode": {
        "enter": {
          "x": {"signal": "width", "offset": -500},
          "y": {"value": 320},
          "fill": {"value": "black"},
          "fontSize": {"value": 17},
          "align": {"value": "left"}
        },
        "update": {
          "text": {"signal": "subtitle"}
        }
      }
    },
    {
      "type": "path",
      "interactive": false,
      "from": {"data": "routes"},
      "encode": {
        "enter": {
          "path": {"field": "path"},
          "stroke": {"value": "black"},
          "strokeOpacity": {"value": 0.7}
        }
      }
    }  
  ]
}


  

  

  